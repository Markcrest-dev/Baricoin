<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transactions | Baricoin</title>
    <link rel="icon" type="image/png" href="images/favicon-new.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Poppins:wght@400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/additional.css">
    <link rel="stylesheet" href="css/dashboard.css">

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <!-- PWA Meta Tags -->
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#d4a574">
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#1a1a1a">
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#f5f5f5">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="Baricoin">
    <link rel="apple-touch-icon" href="/images/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/images/icons/icon-192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="/images/icons/icon-512.png">
</head>

<body class="dashboard-body">

    <div class="dashboard-layout">
        <!-- Sidebar -->
        <aside class="dashboard-sidebar">
            <div class="sidebar-logo">
                <img src="images/baricoin-logo-new.png" alt="Baricoin" style="height: 35px;">
            </div>

            <nav class="sidebar-menu">
                <a href="dashboard.html" class="menu-item">
                    <svg class="menu-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    </svg>
                    <span>Dashboard</span>
                </a>
                <a href="giftcards.html" class="menu-item">
                    <svg class="menu-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                        <line x1="1" y1="10" x2="23" y2="10"></line>
                    </svg>
                    <span>Giftcards</span>
                </a>
                <a href="crypto.html" class="menu-item">
                    <svg class="menu-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <line x1="12" y1="1" x2="12" y2="23"></line>
                        <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                    </svg>
                    <span>Crypto</span>
                </a>
                <a href="transactions.html" class="menu-item active">
                    <svg class="menu-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <line x1="12" y1="1" x2="12" y2="23"></line>
                        <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                    </svg>
                    <span>Transactions</span>
                </a>
                <a href="settings.html" class="menu-item">
                    <svg class="menu-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path
                            d="M12 1v6m0 6v6m5.66-13.66l-4.25 4.25m0 6l-4.25 4.25M23 12h-6m-6 0H1m18.66 5.66l-4.25-4.25m0-6l-4.25-4.25">
                        </path>
                    </svg>
                    <span>Settings</span>
                </a>
            </nav>

            <div class="sidebar-bottom">
                <div class="bari-services-section">
                    <p class="services-label">Bari services</p>
                    <div class="services-submenu">
                        <a href="airtime.html" class="submenu-item">Airtime</a>
                        <a href="data.html" class="submenu-item">Data</a>
                        <a href="cable.html" class="submenu-item">Cable</a>
                        <a href="electricity.html" class="submenu-item">Electricity</a>
                    </div>
                </div>
                <a href="#" id="logoutBtn" class="menu-item logout-item">
                    <svg class="menu-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                        <polyline points="16 17 21 12 16 7"></polyline>
                        <line x1="21" y1="12" x2="9" y2="12"></line>
                    </svg>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="dashboard-content">
            <header class="dashboard-header">
                <div class="header-left">
                    <h1 class="greeting">Transactions</h1>
                    <p class="username">View your transaction history</p>
                </div>
                <div class="header-right">
                    <div class="search-bar">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <circle cx="11" cy="11" r="8"></circle>
                            <path d="m21 21-4.35-4.35"></path>
                        </svg>
                        <input type="text" placeholder="Search...">
                    </div>
                    <button class="notification-btn">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                            <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                        </svg>
                    </button>
                    <div class="user-avatar-btn">
                        <span id="userInitial">U</span>
                    </div>
                </div>
            </header>

            <!-- Transactions Content -->
            <div class="transactions-page-container">
                <!-- Top Controls -->
                <div class="transactions-controls">
                    <div class="search-and-filters">
                        <!-- Search Bar -->
                        <div class="transaction-search">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <circle cx="11" cy="11" r="8"></circle>
                                <path d="m21 21-4.35-4.35"></path>
                            </svg>
                            <input type="text" id="transactionSearch" placeholder="Search transactions...">
                        </div>

                        <!-- Status Filter -->
                        <select id="statusFilter" class="status-filter">
                            <option value="all">All Status</option>
                            <option value="completed">Completed</option>
                            <option value="pending">Pending</option>
                            <option value="failed">Failed</option>
                        </select>

                        <!-- Date Range -->
                        <div class="date-range-inputs">
                            <input type="date" id="dateFrom" class="date-input" placeholder="From">
                            <span style="color: #94a3b8;">to</span>
                            <input type="date" id="dateTo" class="date-input" placeholder="To">
                        </div>
                    </div>

                    <div class="action-buttons">
                        <!-- Export Button -->
                        <button class="export-btn" id="exportBtn">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                <polyline points="7 10 12 15 17 10"></polyline>
                                <line x1="12" y1="15" x2="12" y2="3"></line>
                            </svg>
                            Export CSV
                        </button>
                    </div>
                </div>

                <!-- Filter Tabs -->
                <div class="transaction-filters">
                    <button class="filter-tab active" data-filter="all">All</button>
                    <button class="filter-tab" data-filter="transfer">Transfers</button>
                    <button class="filter-tab" data-filter="giftcard">Giftcards</button>
                    <button class="filter-tab" data-filter="crypto">Crypto</button>
                    <button class="filter-tab" data-filter="bills">Bills</button>
                    <button class="filter-tab" data-filter="airtime">Airtime/Data</button>
                </div>

                <!-- Results Summary -->
                <div class="results-summary" id="resultsSummary" style="display: none;">
                    <p>Showing <strong id="resultCount">0</strong> transactions</p>
                </div>

                <!-- Transactions Table -->
                <div class="transactions-table-container">
                    <table class="transactions-table-new">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="transactionsBody">
                            <tr class="empty-state">
                                <td colspan="6">
                                    <div class="empty-transactions">
                                        <p>No transactions yet</p>
                                        <span>Your transaction history will appear here</span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="pagination-container" id="paginationContainer" style="display: none;">

                    <div class="pagination-buttons">
                        <button class="pagination-btn" id="prevPage" disabled>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <polyline points="15 18 9 12 15 6"></polyline>
                            </svg>
                            Previous
                        </button>
                        <div class="pagination-info">
                            <p>Page <span id="currentPage">1</span> of <span id="totalPages">1</span></p>
                        </div>
                        <button class="pagination-btn" id="nextPage">
                            Next
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <polyline points="9 18 15 12 9 6"></polyline>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Analytics Section -->
            <div class="analytics-section">
                <div class="section-header-row">
                    <h2>Transaction Analytics</h2>
                    <div class="period-selector">
                        <button class="period-btn active" data-period="7D">7D</button>
                        <button class="period-btn" data-period="30D">30D</button>
                        <button class="period-btn" data-period="90D">90D</button>
                        <button class="period-btn" data-period="1Y">1Y</button>
                    </div>
                </div>

                <!-- Balance History Chart -->
                <div class="chart-card">
                    <div class="chart-header">
                        <h3 class="chart-title">Balance History</h3>
                        <p class="chart-subtitle">Track your wallet balances over time</p>
                    </div>
                    <div class="chart-container" style="height: 300px;">
                        <canvas id="balanceHistoryChart"></canvas>
                    </div>
                </div>

                <!-- Charts Grid -->
                <div class="charts-grid">
                    <!-- Transaction Volume -->
                    <div class="chart-card">
                        <div class="chart-header">
                            <h3 class="chart-title">Transaction Volume</h3>
                            <p class="chart-subtitle">Weekly transaction breakdown</p>
                        </div>
                        <div class="chart-container" style="height: 280px;">
                            <canvas id="transactionVolumeChart"></canvas>
                        </div>
                    </div>

                    <!-- Crypto Portfolio -->
                    <div class="chart-card">
                        <div class="chart-header">
                            <h3 class="chart-title">Crypto Portfolio</h3>
                            <p class="chart-subtitle">Asset distribution</p>
                        </div>
                        <div class="chart-container" style="height: 280px;">
                            <canvas id="cryptoPortfolioChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Earnings Chart -->
                <div class="chart-card">
                    <div class="chart-header">
                        <h3 class="chart-title">Earnings Overview</h3>
                        <p class="chart-subtitle">Monthly earnings breakdown</p>
                    </div>
                    <div class="chart-container" style="height: 280px;">
                        <canvas id="earningsChart"></canvas>
                    </div>
                </div>
            </div>

        </main>
    </div>

    <!-- Transaction Details Modal -->
    <div class="modal-overlay" id="transactionDetailsModal" style="display: none;">
        <div class="modal-content">
            <h3>Transaction Details</h3>
            <div class="modal-body">
                <div class="transaction-detail-item">
                    <span class="detail-label">Transaction ID:</span>
                    <span class="detail-value" id="detailId">-</span>
                </div>
                <div class="transaction-detail-item">
                    <span class="detail-label">Type:</span>
                    <span class="detail-value" id="detailType">-</span>
                </div>
                <div class="transaction-detail-item">
                    <span class="detail-label">Description:</span>
                    <span class="detail-value" id="detailDescription">-</span>
                </div>
                <div class="transaction-detail-item">
                    <span class="detail-label">Amount:</span>
                    <span class="detail-value" id="detailAmount">-</span>
                </div>
                <div class="transaction-detail-item">
                    <span class="detail-label">Status:</span>
                    <span class="detail-value" id="detailStatus">-</span>
                </div>
                <div class="transaction-detail-item">
                    <span class="detail-label">Date:</span>
                    <span class="detail-value" id="detailDate">-</span>
                </div>
            </div>
            <div class="modal-actions">
                <button class="btn btn-primary" id="closeDetailsModal">Close</button>
            </div>
        </div>
    </div>

    <!-- Chat Widget -->
    <div class="chat-widget" id="chatWidget">
        <button class="chat-toggle-btn" id="chatToggleBtn">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
        </button>
    </div>

    <script src="js/i18n.js"></script>
    <script src="js/charts.js"></script>
    <script src="js/main.js"></script>
    <script src="js/auth.js"></script>
    <script src="js/transactions.js"></script>
    <script src="js/chat.js"></script>
    <script src="/js/pwa.js"></script>
</body>

</html>